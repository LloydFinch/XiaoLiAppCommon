<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:padding="5dp"
              tools:context="com.xiaoliapp.app.activity.SearchActivity"
              android:background="#782a1937"
              android:orientation="horizontal"
		>

	<TextView
			android:id="@+id/activity_search_btn_back"
			android:layout_width="30dp"
			android:layout_height="30dp"
			android:layout_marginTop="5dp"
			android:layout_marginRight="5dp"
			android:background="@mipmap/back_arrow"
			android:layout_alignParentLeft="true"
			android:layout_centerVertical="true"
			android:onClick="onClick"
			/>

	<LinearLayout
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:orientation="horizontal"
			android:background="@drawable/shape_radius_back_edittext"
			android:gravity="center_vertical"
			android:paddingLeft="5dp"
			android:paddingRight="5dp"
			>

		<ImageButton
				android:id="@+id/activity_search_btn_search"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:src="@mipmap/search_small"
				android:onClick="onClick"
				android:background="#0000"
				/>

		<com.xiaoliapp.app.librarys.sortlistview.ClearEditText
				android:id="@+id/activity_search_txt_content"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:textSize="15sp"
				android:hint="请输入搜索内容"
				android:background="@drawable/shape_radius_search_edittext"
				/>
	</LinearLayout>
</LinearLayout>
