<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="#f3f3f3"
              tools:context="com.xiaoliapp.app.activity.ProfileMyActivity"
		>

	<RelativeLayout
			android:background="#ffffffff"
			android:layout_marginTop="10dp"
			android:layout_marginBottom="10dp"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			>

		<TextView
				android:gravity="center"
				android:background="#00000000"
				android:layout_margin="10dp"
				android:text="阿妹"
				android:drawableLeft="@mipmap/photo"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				/>

		<ImageView
				style="@style/MySmallButton"
				/>

	</RelativeLayout>

	<RelativeLayout
			android:background="#ffffffff"
			android:layout_marginTop="10dp"
			android:layout_marginBottom="10dp"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			>

		<TextView
				android:gravity="center"
				android:background="#ffffffff"
				android:layout_margin="10dp"
				android:text="打分记录"
				android:drawableLeft="@mipmap/myscore"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				/>

		<ImageView
				style="@style/MySmallButton"
				/>

	</RelativeLayout>

	<RelativeLayout
			android:background="#ffffffff"
			android:layout_marginTop="10dp"
			android:layout_marginBottom="10dp"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			>

		<TextView
				android:gravity="center"
				android:background="#00000000"
				android:layout_margin="10dp"
				android:text="印象记录"
				android:drawableLeft="@mipmap/myimpress"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				/>

		<ImageView
				style="@style/MySmallButton"
				/>

	</RelativeLayout>

	<RelativeLayout

			android:background="#ffffffff"
			android:layout_marginTop="10dp"
			android:layout_marginBottom="10dp"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			>

		<TextView
				android:gravity="center"
				android:background="#00000000"
				android:layout_margin="10dp"
				android:text="我的故事"
				android:drawableLeft="@mipmap/mystorys"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				/>

		<ImageView
				style="@style/MySmallButton"
				/>

	</RelativeLayout>

	<RelativeLayout
			android:background="#ffffffff"
			android:layout_marginTop="10dp"
			android:layout_marginBottom="10dp"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			>

		<TextView
				android:gravity="center"
				android:background="#00000000"
				android:layout_margin="10dp"
				android:text="我的收藏"
				android:drawableLeft="@mipmap/mycollect"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				/>

		<ImageView
				style="@style/MySmallButton"
				/>

	</RelativeLayout>

	<RelativeLayout
			android:background="#ffffffff"
			android:layout_marginTop="10dp"
			android:layout_marginBottom="10dp"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			>

		<TextView
				android:gravity="center"
				android:background="#00000000"
				android:layout_margin="10dp"
				android:text="设置"
				android:drawableLeft="@mipmap/settings"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				/>

		<ImageView
				style="@style/MySmallButton"
				/>

	</RelativeLayout>

</LinearLayout>
