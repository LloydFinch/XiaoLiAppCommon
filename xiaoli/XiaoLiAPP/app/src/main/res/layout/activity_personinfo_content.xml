<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
               android:orientation="vertical"
                tools:context="com.google.xiaoliapp.app.Profile_PersonInfoActivity">

    <RelativeLayout
            style="@style/MyLayout"
            >
        <TextView
                style="@style/MyTextView"
                android:textSize="20sp"
                android:text="头像"
                />
        <ImageView
                android:id="@+id/image_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/head"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:layout_alignParentRight="true"
                />
        <TextView
                style="@style/MySmallButton"
                />
    </RelativeLayout>

    <RelativeLayout
            android:layout_marginTop="15dp"
            style="@style/MyLayout"
            >
        <TextView
                style="@style/MyTextView"
                android:textSize="20sp"
                android:text="昵称"
                />
        <TextView
                style="@style/MyTextView"
                android:text="林衣珊"
                android:layout_marginRight="20dp"
                android:layout_alignParentRight="true"
                />
        <TextView
                style="@style/MySmallButton"
                />
    </RelativeLayout>

    <RelativeLayout
            android:layout_marginTop="15dp"
            style="@style/MyLayout"
            >
        <TextView
                style="@style/MyTextView"
                android:textSize="20sp"
                android:text="生日"
                />
        <TextView
                style="@style/MyTextView"
                android:text="2015/5/6"
                android:layout_marginRight="20dp"
                android:layout_alignParentRight="true"
                />
    </RelativeLayout>

    <RelativeLayout
            android:layout_marginTop="15dp"
            style="@style/MyLayout"
            >
        <TextView
                style="@style/MyTextView"
                android:textSize="20sp"
                android:text="星座"
                />
        <TextView
                style="@style/MyTextView"
                android:text="金牛座"
                android:layout_marginRight="20dp"
                android:layout_alignParentRight="true"
                />
    </RelativeLayout>
    <RelativeLayout
            android:layout_marginTop="15dp"
            style="@style/MyLayout"
            >
        <TextView
                style="@style/MyTextView"
                android:textSize="20sp"
                android:text="年龄"
                />
        <TextView
                style="@style/MyTextView"
                android:text="14"
                android:layout_marginRight="20dp"
                android:layout_alignParentRight="true"
                />
    </RelativeLayout>

    <RelativeLayout
            android:layout_marginTop="30dp"
            style="@style/MyLayout"
            >
        <TextView
                style="@style/MyTextView"
                android:textSize="20sp"
                android:text="性别"
                />
        <TextView
                style="@style/MyTextView"
                android:text="女"
                android:layout_marginRight="20dp"
                android:layout_alignParentRight="true"
                />
        <TextView
                style="@style/MySmallButton"
                />
    </RelativeLayout>

    <RelativeLayout
            android:layout_marginTop="15dp"
            style="@style/MyLayout"
            >
        <TextView
                style="@style/MyTextView"
                android:textSize="20sp"
                android:text="收货地址"
                />
        <TextView
                style="@style/MyTextView"
                android:text="北京市海淀区"
                android:layout_marginRight="20dp"
                android:layout_alignParentRight="true"
                />
    </RelativeLayout>
    <RelativeLayout
            android:layout_marginTop="15dp"
            style="@style/MyLayout"
            >
        <TextView
                style="@style/MyTextView"
                android:textSize="20sp"
                android:text="个人标签"
                />
        <TextView
                style="@style/MyTextView"
                android:text="编辑标签"
                android:textColor="#ff312bff"
                android:layout_marginRight="20dp"
                android:layout_alignParentRight="true"
                />
    </RelativeLayout>


</LinearLayout>
